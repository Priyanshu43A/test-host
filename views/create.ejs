<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Wish</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
      }

      input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
      }

      .styled-button {
        background-color: #ff6f61;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
        width: 100%;
      }

      .styled-button:hover {
        background-color: #ff3b2f;
        transform: scale(1.05);
      }

      .styled-button:active {
        background-color: #e63946;
        transform: scale(0.95);
      }

      /* Popup Styling */
      .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        z-index: 10;
      }

      .popup h2 {
        margin-bottom: 15px;
        font-size: 20px;
        color: #333;
      }

      .popup p {
        margin-bottom: 20px;
        font-size: 16px;
        color: #555;
        word-break: break-all;
      }

      .popup button {
        background-color: #ff6f61;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
      }

      .popup button:hover {
        background-color: #ff3b2f;
        transform: scale(1.05);
      }

      .popup button:active {
        background-color: #e63946;
        transform: scale(0.95);
      }

      .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Create Your Wish</h1>
      <input type="text" id="nameInput" placeholder="Enter your name" />
      <button class="styled-button" onclick="makeWish()">Make a Wish</button>
    </div>

    <div class="overlay" id="overlay" onclick="closePopup()"></div>

    <div class="popup" id="popup">
      <h2>Your Wish Link</h2>
      <p id="wishLink"></p>
      <button onclick="shareWish()">Share</button>
      <button onclick="closePopup()">Close</button>
    </div>

    <script>
      function makeWish() {
        const name = document.getElementById("nameInput").value;
        if (name) {
          const link = `${window.location.origin}/greet/${name}`;
          document.getElementById("wishLink").textContent = link;
          document.getElementById("overlay").style.display = "block";
          document.getElementById("popup").style.display = "block";
        } else {
          alert("Please enter your name.");
        }
      }

      function closePopup() {
        document.getElementById("overlay").style.display = "none";
        document.getElementById("popup").style.display = "none";
      }

      function shareWish() {
        const link = document.getElementById("wishLink").textContent;
        if (navigator.share) {
          navigator
            .share({
              title: "My Wish Link",
              text: "Check out my wish!",
              url: link,
            })
            .catch((error) => console.log("Error sharing:", error));
        } else {
          alert("Your browser does not support the Web Share API");
        }
      }
    </script>
  </body>
</html>
